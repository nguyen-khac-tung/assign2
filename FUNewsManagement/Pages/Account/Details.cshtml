@page
@model FUNewsManagement.Pages.Account.DetailsModel
@{
    ViewData["Title"] = "Details";
}

<h2>Account Details</h2>

<hr />
<div style="margin-top: 20px">
    <table>
        <tr>
            <th class="col-sm-4">Account ID :</th>
            <td>@Model.Account.AccountId</td>
        </tr>
        <tr>
            <th class="col-sm-4">Account Name :</th>
            <td>@Model.Account.AccountName</td>
        </tr>
        <tr>
            <th class="col-sm-4">Account Email :</th>
            <td>@Model.Account.AccountEmail</td>
        </tr>
        <tr>
            <th class="col-sm-4">Role :</th>
            <td>@Model.Account.RoleName</td>
        </tr>
        <tr>
            <th class="col-sm-4">Status :</th>
            <td>@Model.Account.Status</td>
        </tr>
    </table>
</div>
<div style="margin-top: 50px">
    <a asp-page="/Account/Edit" asp-route-id="@Model.Account.AccountId">Edit</a> |
    <a asp-page="/Account/List">Back to List</a>
</div>

