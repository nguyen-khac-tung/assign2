@page
@model FUNewsManagement.Pages.Account.EditProfileModel
@{
    ViewData["Title"] = "Edit Profile";
}

<h1>Edit Profile</h1>

<hr />

<div class="my-5">
    <form method="post">
        <div class="row justify-content-center">
            <div class="col-md-12 col-lg-10">
                <input type="hidden" asp-for="Account.AccountId" />
                <div class="row">
                    <label asp-for="Account.AccountName" class="col-form-label">Account Name</label>
                    <input asp-for="Account.AccountName" class="form-control" />
                    <span asp-validation-for="Account.AccountName" class="text-danger"></span>
                </div>
                <div class="row">
                    <label asp-for="Account.AccountEmail" class="col-form-label">Account Email</label>
                    <input asp-for="Account.AccountEmail" class="form-control" />
                    <span asp-validation-for="Account.AccountEmail" class="text-danger"></span>
                </div>
                <div class="row">
                    <label asp-for="Account.AccountPassword" class="col-form-label">Account Password</label>
                    <input asp-for="Account.AccountPassword" class="form-control" />
                    <span asp-validation-for="Account.AccountPassword" class="text-danger"></span>
                </div>
                <div class="row justify-content-between mt-4">
                    <div class="col-md-5 ps-0">
                        @if (ViewData["Message"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show rounded-0 py-2">
                                <span>@ViewData["Message"]</span>
                                <button type="button" class="btn-close pt-2" data-bs-dismiss="alert"></button>
                            </div>
                        }
                        @if (ViewData["Success"]  != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show rounded-0 py-2">
                                <span>@ViewData["Success"] </span>
                                <button type="button" class="btn-close pt-2" data-bs-dismiss="alert"></button>
                            </div>
                        }
                    </div>
                    <div class="col-md-2 col-sm-12">
                        <button type="submit" class="btn btn-primary py-2 w-100">Save Change</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<div>
    @if (Model.Account.RoleName == "Admin")
    {
        <a asp-page="/Account/List" asp-action="List">Back to List</a>
    }
    else if (Model.Account.RoleName == "Staff")
    {
        <a asp-page="/News/List" >Back to List</a>
    }
    else
    {
        <a asp-page="/Home/Index" >Back to List</a>
    }
</div>