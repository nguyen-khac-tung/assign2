@page
@model FUNewsManagement.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center">
    <div class="card shadow p-4" style="width: 400px; margin-top: 100px">
        <h2 class="text-center mb-4">Login</h2>
        <form method="post">
            @if (ViewData["Message"] != null)
            {
                <div class="mb-3">
                    <div class="alert alert-danger alert-dismissible fade show rounded-0 py-2">
                        <span>@ViewBag.Message</span>
                        <button type="button" class="btn-close pt-2" data-bs-dismiss="alert"></button>
                    </div>
                </div>
            }
            <div class="mb-3">
                <label asp-for="AccountLoginVM.AccountEmail" class="form-label">Email</label>
                <input asp-for="AccountLoginVM.AccountEmail" class="form-control" placeholder="Enter your email">
                <span asp-validation-for="AccountLoginVM.AccountEmail" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="AccountLoginVM.AccountPassword" class="form-label">Password</label>
                <input asp-for="AccountLoginVM.AccountPassword" type="password" class="form-control" placeholder="Enter your password">
                <span asp-validation-for="AccountLoginVM.AccountPassword" class="text-danger"></span>
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </form>
    </div>
</div>
